<!doctype html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../css/index.css">
    <link rel="stylesheet" href="../css/bootstrap-5.0.0-beta1-dist/css/bootstrap.min.css">
    <script src="../js/index.js"></script>
    <script src="../js/jquery-3.6.0.min.js"></script>
    <title>Toppage</title>
</head>
<body>
<header>ヘッダー</header>

<% for(var i = 0; i < values.length; i++) { %>
    <div class="container">
        <div class="row row-0">
            <div class="col-6">
                <h1><%= values[i].car_maker %></h1>
            </div>
            <div class="col-6">
                <h2><%= values[i].car_name %></h2>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row row-0">
        <div class="col-4 table1">
            <img src="../img/<%= values[i].car_detail_id %>.jpg" id="topimg">
            <ul class="list1">
                <li>総合評価:</li>
                <li>4</li>
            </ul>
        </div>
        <div class="col-4">
            <table class="table table-bordered table-hover">
                <tr >
                    <th colspan="2" class="money">￥<%= values[i].bid_price %></th>
                </tr>
                <tr>
                    <td>年式</td>
                    <td><%= values[i].car_age %>年</td>
                </tr>
                <tr>
                    <td>型式</td>
                    <td><%= values[i].car_model %></td>
                </tr>            
                <tr>
                    <td>排気量</td>
                    <td><%= values[i].car_displacement %></td>
                </tr>            
                <tr>
                    <td>走行距離</td>
                    <td><%= values[i].car_mileage %>km</td>
                </tr>
                <tr>
                    <td>車検</td>
                    <% if(values[i].car_inspection == 0){ %>
                        <td>無</td>
                    <% } else{ %>
                        <td>無</td>
                    <% } %>
                </tr>
                <tr>
                    <td>トランスミッション</td>
                    <% if(values[i].car_inspection == 0){ %>
                        <td>AT</td>
                    <% } else{ %>
                        <td>MT</td>
                    <% } %>
                </tr>
                
            </table>
        </div>
        <div class="col-4">
            <div class="parmition"><%= values[i].end_time %> </div>
            <div class="parmitionposition">
                <a href="/auction/<%= values[i].car_detail_id %>" class="parmition" id="detail">詳細</a>
            </div>
        </div>
    </div>
<% } %>
</body>
</html>
